{
    "name": "abovesky/url-auth",
    "description": "Generate a url with an expiration date and signature to prevent unauthorized access",
    "keywords": [
        "security",
        "encryption",
        "sign",
        "url"
    ],
    "homepage": "https://github.com/abovesky/url-auth",
    "license": "MIT",
    "authors": [
        {
            "name": "abovesky",
            "email": "abovesky@qq.com"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "league/url": "^3.3",
        "indigophp/hash-compat": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.4"
    },
    "autoload": {
        "psr-4": {
            "abovesky\\UrlAuth\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "abovesky\\UrlAuth\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit"
    }
}
